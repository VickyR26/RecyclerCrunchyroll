<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/ImagePortada"
        android:layout_width="150dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="10dp"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/TextTitulo"
        android:layout_width="150dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/ImagePortada"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="10dp"
        android:text="Titulo del Anime"
        android:textSize="15sp"
        android:maxLines="2"
        android:background="@color/fondo_info"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/TextTipo"
        android:layout_width="50dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toBottomOf="@id/TextTitulo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="10dp"
        android:text="Series"
        android:textSize="14sp"
        android:background="@color/fondo_info"
        android:textColor="@color/letra_azul"
        />
    <TextView
        android:id="@+id/TextDoblaje"
        android:layout_width="100dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toBottomOf="@id/TextTitulo"
        app:layout_constraintLeft_toRightOf="@id/TextTipo"
        android:text="Doblaje"
        android:textSize="14sp"
        android:background="@color/fondo_info"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/TextEstado"
        android:layout_width="150dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toBottomOf="@id/TextTipo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="10dp"
        android:text="En transmision"
        android:textSize="12sp"
        android:background="@color/fondo_info"
        android:textColor="@color/white"
        />



</androidx.constraintlayout.widget.ConstraintLayout>